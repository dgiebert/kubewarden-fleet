{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "/.*opentelemetry-operator/"
      ]
    },
    {
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "/.*jaeger-operator/"
      ]
    }
  ]
}
